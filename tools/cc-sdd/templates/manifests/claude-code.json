{
  "version": 1,
  "artifacts": [
    {
      "id": "commands_os_mac",
      "source": {
        "type": "templateDir",
        "fromDir": "templates/agents/{{AGENT}}/commands/os-mac",
        "toDir": "{{AGENT_COMMANDS_DIR}}"
      },
      "when": { "agent": "claude-code", "os": ["mac"] }
    },
    {
      "id": "commands_os_windows",
      "source": {
        "type": "templateDir",
        "fromDir": "templates/agents/{{AGENT}}/commands/os-windows",
        "toDir": "{{AGENT_COMMANDS_DIR}}"
      },
      "when": { "agent": "claude-code", "os": ["windows", "linux"] }
    },
    {
      "id": "doc_main",
      "source": {
        "type": "templateFile",
        "from": "templates/agents/{{AGENT}}/docs/CLAUDE/CLAUDE.{{LANG_CODE}}.tpl.md",
        "toDir": ".",
        "rename": "{{AGENT_DOC}}"
      },
      "when": { "agent": "claude-code" }
    }
  ]
}
